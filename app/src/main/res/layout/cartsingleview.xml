<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="5dp"
    android:elevation="5dp"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="147dp"
        android:layout_height="wrap_content"
        android:padding="15dp">


        <ImageView
            android:id="@+id/img1"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@mipmap/ic_launcher"
            app:civ_border_color="#FF000000"
            app:civ_border_width="2dp"
            tools:ignore="MissingClass" />

        <TextView
            android:id="@+id/Cprod_name"
            android:layout_width="121dp"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/img1"
            android:layout_marginLeft="-79dp"
            android:layout_marginBottom="-26dp"
            android:layout_toRightOf="@id/img1"
            android:text="This is Demo Name"
            android:textColor="#000"
            android:textSize="12sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/Cprod_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/Cprod_name"
            android:layout_marginLeft="-76dp"
            android:layout_marginTop="22dp"
            android:layout_toRightOf="@id/img1"
            android:text="This is Course "
            android:textColor="#000"
            android:textSize="12sp" />

        <ImageButton
            android:id="@+id/Cdltbtn"
            android:layout_width="wrap_content"
            android:layout_height="28dp"
            android:layout_below="@id/Cprod_price"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="-128dp"
            android:layout_toRightOf="@id/img1"
            android:backgroundTint="#FFFFFF"
            android:src="@android:drawable/ic_menu_delete"
            tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

        <ImageButton
            android:id="@+id/Ceditbtn"
            android:layout_width="32dp"
            android:layout_height="26dp"
            android:layout_below="@id/Cprod_price"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="17dp"
            android:layout_toRightOf="@id/img1"
            android:backgroundTint="#00FFFFFF"
            android:src="@android:drawable/ic_menu_edit"
            tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

        <TextView
            android:id="@+id/Cquantity"
            android:layout_width="25dp"
            android:layout_height="24dp"
            android:layout_below="@+id/Cprod_price"
            android:layout_marginTop="19dp"
            android:layout_marginEnd="16dp"
            android:layout_toStartOf="@+id/Ceditbtn"
            android:text="TextView" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_below="@+id/Cprod_price"
            android:layout_marginTop="21dp"
            android:layout_marginEnd="1dp"
            android:layout_toStartOf="@+id/Cquantity"
            android:text="@string/Quantity"
            android:textColor="#100F0F"
            android:textSize="10sp" />




    </RelativeLayout>

</androidx.cardview.widget.CardView>