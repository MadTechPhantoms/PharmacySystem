<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="5dp"
    android:elevation="5dp"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:id="@+id/rlay"
        android:layout_width="147dp"
        android:layout_height="wrap_content"
        android:padding="15dp">


        <ImageView
            android:id="@+id/imgcus"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@mipmap/ic_launcher"
            app:civ_border_color="#FF000000"
            app:civ_border_width="2dp"
            tools:ignore="MissingClass"
            android:layout_centerHorizontal="true"/>

        <TextView
            android:id="@+id/prod_name2"
            android:layout_width="121dp"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/imgcus"
            android:layout_marginLeft="-77dp"
            android:layout_marginBottom="-37dp"
            android:layout_toRightOf="@id/imgcus"
            android:text="This is Demo Name"
            android:textColor="#000"
            android:textSize="12sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/prod_price2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/prod_name2"
            android:layout_marginLeft="-76dp"
            android:layout_marginTop="22dp"
            android:layout_toRightOf="@id/imgcus"
            android:text="This is Course "
            android:textColor="#000"
            android:textSize="12sp" />

    </RelativeLayout>


</androidx.cardview.widget.CardView>